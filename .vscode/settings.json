{
    "workbench.colorTheme": "Lunar Eclipse",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "prettier.arrowParens": "avoid",
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.glyphMargin": false,
    "editor.scrollbar.vertical": "hidden",
    "window.density.editorTabHeight": "compact",
    "workbench.layoutControl.enabled": false,
    "liveSassCompile.settings.generateMap": true,
    "liveSassCompile.settings.formats": [
      {
        "format": "expanded",
        "extensionName": ".css",
        "savePath": "~/../css/"
      }
    ],
    "liveSassCompile.settings.autoprefix": ["> 1%", "last 10 versions"],
    "liveSassCompile.settings.showOutputWindow": true,
    "liveServer.settings.AdvanceCustomBrowserCmdLine": "",
    "[html]": {
      "editor.defaultFormatter": "vscode.html-language-features"
    },
    "workbench.iconTheme": "symbols",
    "workbench.preferredLightColorTheme": "Iceberg",
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line-thin",
    "editor.cursorSmoothCaretAnimation": "explicit",
  
    // Font
  
    "editor.fontSize": 18,
    "editor.lineHeight": 28.5,
    "editor.fontWeight": "400",
    "editor.fontLigatures": true,
    "editor.fontFamily": "Aldrich, Cornerita, DejaVu Sans Mono, Cascadia Mono, Consolas, 'Courier New', monospace",
    "terminal.integrated.fontFamily": "Consolas",
    "editor.inlayHints.fontFamily": "Cornerita, Aldrich",
    "chat.editor.fontFamily": "Cornerita, Aldrich",
    "editor.codeLensFontFamily": "Cornerita, Aldrich",
    "debug.console.fontFamily": "Cornerita, Aldrich",
    "editor.tokenColorCustomizations": {
      "textMateRules": [
        {
          "scope": [
            "comment",
            "entity.name.type.class",
            "keyword",
            "constant",
            "storage.modifier",
            "storage.type.class.js"
          ],
          "settings": {
            "fontStyle": "italic"
          }
        },
        {
          "scope": [
            "invalid",
            "keyword.operator",
            "constant.numeric.css",
            "keyword.other.unit.px.css",
            "constant.numeric.decimal.js",
            "constant.numeric.json"
          ],
          "settings": {
            "fontStyle": ""
          }
        }
      ]
    },
    // Настройки терминала
    "terminal.integrated.fontFamily": "Consolas",
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.cursorStyle": "line",
    // Настройки обозревателя
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // Настройки для Breadcrumbs
    "breadcrumbs.icons": false,
    "breadcrumbs.showKeys": false,
    "breadcrumbs.showFiles": false,
    "breadcrumbs.symbolPath": "off",
    "breadcrumbs.showArrays": false,
    "breadcrumbs.showEvents": false,
    "breadcrumbs.showFields": false,
    "breadcrumbs.showClasses": false,
    "breadcrumbs.showMethods": false,
    "breadcrumbs.showBooleans": false,
    "breadcrumbs.showFunctions": false,
    "breadcrumbs.showConstants": false,
    "breadcrumbs.showEnumMembers": false,
    "breadcrumbs.showConstructors": false,
    "window.commandCenter": false,
    "editor.tabSize": 3,
    "editor.wordWrap": "on"
  }